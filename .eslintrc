{
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "env": {
        "node": true
    },
    "rules": {
        "semi": [2, "always"],
        "indent": ["error", 2],
        "spaced-comment": ["error", "always"],
        "comma-spacing": ["error", { "before": false, "after": true }],
        "space-infix-ops": ["error"],
        "key-spacing": ["error", { "beforeColon": false }],
        "object-curly-spacing": ["error", "never"],
        "quotes": ["error", "double"]
    }
}
